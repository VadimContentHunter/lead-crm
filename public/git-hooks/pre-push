#!/usr/bin/env bash

echo "Running pre-push checks..."
echo "üîç Activated Git hook: running PHP checks..."

cd public || exit 1

# PHP_CodeSniffer phpcbf
echo "Running phpcbf..."
composer run phpcbf
if [ $? -ne 0 ]; then
  echo "‚ùå phpcbf failed. Please fix code style issues before committing."
  exit 1
fi

# PHP_CodeSniffer phpcs
echo "Running phpcs..."
composer run phpcs
if [ $? -ne 0 ]; then
  echo "‚ùå phpcs failed. Please fix code style issues before committing."
  exit 1
fi

# PHPStan
echo "Running phpstan..."
composer run phpstan
if [ $? -ne 0 ]; then
  echo "‚ùå phpstan static analysis failed. Please fix issues before committing."
  exit 1
fi

# PHPUnit
echo "Running phpunit..."
composer run phpunit
if [ $? -ne 0 ]; then
  echo "‚ùå phpunit tests failed. Please fix tests before committing."
  exit 1
fi

echo "‚úÖ All checks passed!"
exit 0

