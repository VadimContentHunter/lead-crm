<?xml version="1.0"?>

<ruleset name="MyStyle">
    <!-- Какие расширения файлов проверять -->
    <arg name="extensions" value="php" />

    <!-- Подключаем основной современный стандарт кодирования -->
    <rule ref="PSR12"/>

    <!-- Правило: максимальная длина строки -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <!-- мягкий лимит -->
            <property name="absoluteLineLimit" value="140"/>
            <!-- жёсткий лимит -->
        </properties>
        <exclude name="Generic.Files.LineLength.TooLong" />
        <!-- не показывать ошибку при превышении -->
    </rule>

    <!-- Разрешаем нестандартные имена методов в тестах -->
    <rule ref="PSR1.Methods.CamelCapsMethodName.NotCamelCaps">
        <exclude-pattern>tests/*</exclude-pattern>
    </rule>

    <!-- Отключаем проверку символа конца строки (EOL) -->
    <rule ref="Generic.Files.LineEndings">
        <exclude name="Generic.Files.LineEndings.InvalidEOLChar"/>
    </rule>

    <!-- PEAR стандарт (включён, но многие правила отключены) -->
    <rule ref="PEAR">

        <!-- Отключаем лишние проверки управления потоком -->
        <exclude name="PEAR.ControlStructures.MultiLineCondition.StartWithBoolean" />
        <exclude name="PEAR.ControlStructures.MultiLineCondition.SpacingAfterOpenBrace" />

        <!-- Отключаем требования к docblock'ам файла -->
        <exclude name="PEAR.Commenting.FileComment.Missing" />
        <exclude name="PEAR.Commenting.FileComment.MissingVersion" />
        <exclude name="PEAR.Commenting.FileComment.MissingCategoryTag" />
        <exclude name="PEAR.Commenting.FileComment.MissingLicenseTag" />
        <exclude name="PEAR.Commenting.FileComment.MissingLinkTag" />
        <exclude name="PEAR.Commenting.FileComment.WrongStyle" />

        <!-- Отключаем требования к docblock'ам классов -->
        <exclude name="PEAR.Commenting.ClassComment.Missing" />
        <exclude name="PEAR.Commenting.ClassComment.MissingAuthorTag" />
        <exclude name="PEAR.Commenting.ClassComment.MissingPackageTag" />
        <exclude name="PEAR.Commenting.ClassComment.MissingCategoryTag" />
        <exclude name="PEAR.Commenting.ClassComment.IncompleteCopyright" />
        <exclude name="PEAR.Commenting.ClassComment.MissingLicenseTag" />
        <exclude name="PEAR.Commenting.ClassComment.MissingLinkTag" />

        <!-- Отключаем требования к docblock'ам функций -->
        <exclude name="PEAR.Commenting.FunctionComment.Missing" />
        <exclude name="PEAR.Commenting.FunctionComment.MissingReturn" />
        <exclude name="PEAR.Commenting.FunctionComment.MissingParamTag" />
        <exclude name="PEAR.Commenting.FunctionComment.ParamNameNoMatch" />
        <exclude name="PEAR.Commenting.FunctionComment.MissingParamComment" />
        <exclude name="PEAR.Commenting.FunctionComment.SpacingAfterParamType" />

        <!-- Отключаем правило по стилю вызовов функций -->
        <exclude name="PEAR.Commenting.FunctionCallSignature.CloseBracketLine" />

        <!-- Отключаем требование использовать require вместо include -->
        <exclude name="PEAR.Files.IncludingFile.UseInclude" />

        <!-- Отключаем проверки форматирования сигнатур вызовов -->
        <exclude name="PEAR.Functions.FunctionCallSignature.ContentAfterOpenBracket" />
        <exclude name="PEAR.Functions.FunctionCallSignature.CloseBracketLine" />
        <exclude name="PEAR.Functions.FunctionCallSignature.Indent" />

        <!-- Отключаем правила наименование приватных переменных/методов -->
        <exclude name="PEAR.NamingConventions.ValidVariableName.PrivateNoUnderscore" />
        <exclude name="PEAR.NamingConventions.ValidFunctionName.PrivateNoUnderscore" />

        <!-- Отключаем проверку отступов и `->` -->
        <exclude name="PEAR.WhiteSpace.ObjectOperatorIndent.Incorrect" />
        <exclude name="PEAR.WhiteSpace.ScopeIndent.IncorrectExact" />

        <!-- Отключаем отдельные правила Generic, связанные с docblock'ами -->
        <exclude name="Generic.Commenting.DocComment.NonParamGroup" />
        <exclude name="Generic.Commenting.DocComment.MissingShort" />
        <exclude name="Generic.Commenting.DocComment.SingleLineComment" />

        <!-- Отключаем проверки для директории tests/** -->
        <exclude-pattern>tests/**</exclude-pattern>
    </rule>

    <!-- <rule ref="Squiz.Commenting.FunctionComment" />
    <rule ref="Squiz.Commenting.DocCommentAlignment" /> -->

    <!-- Каталоги проекта, которые нужно анализировать -->
    <file>app/</file>
    <file>tests/</file>

    <!-- Исключаем сторонние библиотеки и внутренние shared-библиотеки -->
    <exclude-pattern>vendor/**</exclude-pattern>
    <exclude-pattern>app/libs/**</exclude-pattern>
</ruleset>
